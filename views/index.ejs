<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>To Do List</title>
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>

<body>
  <h1>To Do List</h1>


  <section class="add"> 
    <form action="/messages" method="POST">
      <input type="text" placeholder="Add Item to List " name="toDoList">
      <button class="addToList">Enter</button>
    </form>
  </section>

  <section class="container">
    <ul>
      <% for(var i=0; i<messages.length; i++) {%>
        <% if (messages[i].completed){%>
        <li class="completed">
          <span><%= messages[i].toDoList %></span>
        </li>
        <% } %>
        <% if (!messages[i].completed){%>
          <li>
            <span><%= messages[i].toDoList %></span>
          </li>
          <% } %>
      <% }%>
    </ul>
  </section>

  <button class="deletedCompletedItems">Delete Completed Items</button>
  <button class="clearAll">Clear All</button>
  

  <script src="main.js"></script>

</body>

</html>